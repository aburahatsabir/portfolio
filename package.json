{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Abu Rahat Sabir's Portfolio Website",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:images && vite build && npm run build:html",
    "build:images": "node scripts/optimize-images.js",
    "build:html": "node scripts/build-html.js",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:html",
    "lint:css": "stylelint 'assets/css/**/*.css' --fix",
    "lint:js": "eslint 'assets/js/**/*.js' --fix",
    "lint:html": "html-validate '*.html' 'case-studies/*.html'",
    "test": "cypress run",
    "test:open": "cypress open",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "cypress": "^13.6.2",
    "eslint": "^8.56.0",
    "gh-pages": "^6.1.0",
    "html-validate": "^8.9.1",
    "rimraf": "^5.0.5",
    "sharp": "^0.33.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.44.1",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-static-copy": "^1.0.0"
  },
  "private": true
}
